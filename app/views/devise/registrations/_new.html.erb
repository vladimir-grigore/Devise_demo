<% header "Sign Up" %>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.input :name, input_html: { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= f.input :email, input_html: { class: 'form-control' }  %>
  </div>

  <div class="form-group">
    <%= f.input :password, autocomplete: "off", input_html: { class: 'form-control' }  %>
    <% if @validatable %>
      <span class="help-block"><%= @minimum_password_length %> characters minimum</span>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.input :password_confirmation, autocomplete: "off", input_html: { class: 'form-control' } %>
  </div>

  <%= f.submit "Sign up", class: 'btn btn-primary' %>
<% end %>

<%= render "devise/shared/links" %>